<h1>Eat A Burger!</h1>

<h2>Burgers to Devour!</h2>

<ul>
  {{#each burgers}}

    {{#unless devour}}
      <!--mod needed on sleep=true-->
      <!--burgers/burger-block used to be > cats/cat-block sleep=true-->
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>burgers that are Eaten!</h2>

<ul>
  {{#each burgers}}
  <!--mod needed-->
    {{#if devour}}
    <!--mod needed on sleep=false-->
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>
<!--mod needed-->
  <div class="form-group">
    <label for="slee">Devour?</label><br>
    <!--name used to = "sleepy" on both inputs-->
    <input type="radio" name="devour" value="1" checked> devour!<br>
    <!--mod needed on "Awake"-->
    <input type="radio" name="devour" value="0"> Awake??/Not Eaten?
  </div>

  <button type="submit">Add Burger</button>
</form>


