<div id="imgWrap"><img src="../assets/images/burger.jpeg" alt="Picture of Burger"></div>

<h1>Eat A Burger!</h1>

<h2>Burgers To Devour!</h2>

<ul>
  {{#each burgers}}

    {{#unless devour}}
      <!--mod needed on sleep=true-->
      <!--burgers/burger-block used to be > cats/cat-block sleep=true-->
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers That Are Eaten!</h2>

<ul>
  {{#each burgers}}
  <!--mod needed-->
    {{#if devour}}
    <!--mod needed on sleep=false-->
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="ca"></label>
    <textarea autofocus id="ca" name="name"></textarea>
  </div>

  <button id="submitBtn" type="submit">Add A Burger</button>
  <p id="formDir">Enter A Burger You Want; Then, Press "Add-A-Burger" Button.</p>
</form>



